<ul class='list-group'>
  <% @entries.each do |recipe| %>
    <li class='list-group-item list-group-item-secondary'>
      <h1 class='text-center'><%= link_to recipe.title, recipe_path(recipe.id), class: 'text-dark' %></h1>
      <img src="<%= recipe.photo.url %>" class="rounded mx-auto d-block w-50 p-3"/>
    </li>
  <% end %>
</ul>
